{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-white">
        <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
            <h2 class="sr-only">My Orders</h2>
            <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
                {% for order in orders %}
                    <h3 class="mt-4 text-sm text-gray-700">{{ order.product.name }}</h3>
                    <p class="mt-1 text-lg font-medium text-gray-900">{{ order.product.description }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}