{% extends 'base.html.twig' %}

{% block title %}My wishlist{% endblock %}

{% block body %}
    <div class="bg-white">
        <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
            <h2 class="sr-only">Products</h2>
            {% include 'components/_search.html.twig' %}
            <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
                {% if wishlists is defined %}
                    {% for wishlist in wishlists %}
                        {% for image in wishlist.product.images %}
                            {% if image.filename ends with 'thumbnail.jpg' %}
                                <a href="{{ path('app_product_id', {id: wishlist.product.id}) }}" class="group">
                                    <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
                                        <img src="{{asset(image.filename) }}" alt="{{ wishlist.product.name }}" title="{{ wishlist.product.name }}" class="h-full w-full object-cover object-center group-hover:opacity-75">
                                    </div>
                                    <h3 class="mt-4 text-sm text-gray-700">{{ wishlist.product.name }}</h3>
                                    <p class="mt-1 text-lg font-medium text-gray-900">{{ wishlist.product.price }} â‚¬</p>
                                </a>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

