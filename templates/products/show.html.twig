                                <div class="mb-4 mr-4 lg:mb-0">
                                    <div class="w-36">
                                        <div class="flex gap-4 mb-6 w-max">
                                            <input type="hidden" name="product_id" value="{{ product.id }}">
                                            <input type="number" name="quantity" value="1" min="1" class="flex items-center w-full font-semibold text-center text-gray-700 placeholder-gray-700 bg-gray-100 outline-none dark:text-gray-400 dark:placeholder-gray-400 dark:bg-gray-900 focus:outline-none text-md hover:text-black">

                                            <button id="successButton" data-modal-target="successModal" data-modal-toggle="successModal" type="submit" class="px-4 py-3 text-center text-blue-600 bg-blue-100 border border-blue-600 dark:hover:bg-gray-900 dark:text-gray-400 dark:border-gray-700 dark:bg-gray-700 hover:bg-blue-600 hover:text-gray-100 lg w-full rounded-xl">
