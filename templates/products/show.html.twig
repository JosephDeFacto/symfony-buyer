    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $('form.dynamic-quantity').on('submit', function(evt) {
            evt.preventDefault();
            let form = $(this);
            let product = form.find('input[name="product_id"]').val();
            let quantity = parseInt(form.find('input[name="quantity"]').val());
            let cartCount = $('.cart-count');


            if (isNaN(quantity) || quantity < 1) {
                quantity = 1;
                form.find('input[name="quantity"]').val(quantity);
            }

            $.ajax({
                type: 'POST',
                url: '{{ path('app_add_to_cart', {id: product.id}) }}',
                data: { product: product, quantity: quantity },
                dataType: 'json',
                success: function(data) {
                    console.log(data);
                    cartCount.text(data.quantity);

                },
                error: function (xhr) {
                    console.log('Error: ', xhr);
                }
            });
        });
    </script>
